{
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "dotenv -- turbo dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@turbo/gen": "^1.9.7",
        "eslint": "^7.32.0",
        "eslint-config-custom": "*",
        "prettier": "^3.0.0",
        "turbo": "latest",
        "dotenv-cli": "latest"
    },
    "name": "cs-hub-monorepo",
    "packageManager": "yarn@1.22.19",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "semi": true,
        "trailingComma": "none",
        "bracketSameLine": false,
        "arrowParens": "avoid"
    }
}
